# OpenScholar API Environment Configuration Example
# Copy this file to .env and update the values

# API Security - CHANGE THIS IN PRODUCTION!
OPENSCHOLAR_API_KEY=your-super-secure-api-key-here

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8002

# Model Configuration
RETRIEVER_MODEL=bio-protocol/scientific-retriever
RERANKER_MODEL=bio-protocol/scientific-reranker

# Performance Settings
MAX_WORKERS=1
BATCH_SIZE_EMBEDDING=64
BATCH_SIZE_RERANKING=32

# Cache Configuration
CACHE_DIR=./model_cache
ENABLE_CACHE=true

# Security Settings
CORS_ORIGINS=*
RATE_LIMIT_PER_MINUTE=60

# Production Settings
PRODUCTION_MODE=false
DEBUG_LOGGING=true